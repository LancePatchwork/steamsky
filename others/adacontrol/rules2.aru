set Max_Messages 20;
set Verbose On;
check Assignments (repeated);
check Case_Statement (others_span, min 1);
check Directly_Accessed_globals;
check Header_Comments (minimum, 10);
check Improper_Initialization;
check Local_Hiding (strict);
check Movable_Accept_Statements (possible);
check Object_Declarations (min_integer_span, 8);
check Reduceable_Scope;
check Simplifiable_Expressions;
check Simplifiable_Statements;
check Type_Initial_Values;
check Unsafe_Unchecked_Conversion;
